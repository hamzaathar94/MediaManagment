<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/viewImage"
    >
    <TextView
        android:id="@+id/imgTxtView"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text="Image title"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9"/>

    <ImageView
        android:id="@+id/ViewimageView"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/imgTxtView"
        app:layout_constraintStart_toStartOf="@id/imgTxtView"
        app:layout_constraintEnd_toEndOf="@id/imgTxtView"/>
    <ImageView
        android:id="@+id/btnMore"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/imgTxtView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imgTxtView"
        android:background="@drawable/more"
        />


</androidx.constraintlayout.widget.ConstraintLayout>